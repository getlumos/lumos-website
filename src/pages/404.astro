---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="flex min-h-screen items-center justify-center bg-background">
    <div class="text-center">
      <h1 class="mb-4 text-6xl font-bold text-primary">404</h1>
      <p class="mb-8 text-xl text-muted-foreground">Oops! Page not found</p>
      <a
        href="/"
        class="inline-flex items-center justify-center rounded-lg text-lg font-semibold h-12 px-6 bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
      >
        Return to Home
      </a>
    </div>
  </div>
</Layout>
