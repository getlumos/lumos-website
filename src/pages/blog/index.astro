---
import Layout from '../../layouts/Layout.astro';
import NavbarAstro from '../../components/NavbarAstro.astro';
import FooterAstro from '../../components/FooterAstro.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const categories = [
  { value: "all", label: "All Posts" },
  { value: "announcement", label: "Announcements" },
  { value: "tutorial", label: "Tutorials" },
  { value: "release", label: "Release Notes" },
  { value: "guide", label: "Guides" },
];

const categoryColors: Record<string, string> = {
  announcement: "bg-primary text-primary-foreground",
  tutorial: "bg-secondary text-secondary-foreground",
  release: "bg-red-500/20 text-red-400 border border-red-500/30",
  guide: "border border-input text-foreground",
};

const formatDate = (date: Date): string => {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};

const authors: Record<string, { name: string; bio?: string; github?: string }> = {
  RECTOR: {
    name: "RECTOR",
    bio: "Core maintainer of LUMOS",
    github: "rz1989s",
  },
  team: {
    name: "LUMOS Team",
    bio: "The LUMOS development team",
    github: "getlumos",
  },
};
---

<Layout
  title="Blog - LUMOS"
  description="News, tutorials, and insights about LUMOS and Solana development. Stay updated with the latest releases, guides, and announcements."
>
  <NavbarAstro slot="navbar" />

  <div class="pt-16">
    <div class="container mx-auto px-4 py-16">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          News, tutorials, and insights about LUMOS and Solana development
        </p>
      </div>

      <!-- Category Filters (Client-side filtering via JS) -->
      <div class="mb-8 flex flex-wrap gap-2 justify-center" id="category-filters">
        {categories.map((cat) => (
          <button
            type="button"
            data-category={cat.value}
            class={`px-4 py-2 rounded-lg text-sm font-medium transition-colors ${
              cat.value === "all"
                ? "bg-primary text-primary-foreground"
                : "bg-secondary hover:bg-secondary/80"
            }`}
          >
            {cat.label}
          </button>
        ))}
      </div>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="posts-grid">
          {posts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="block group"
              data-post-category={post.data.category}
            >
              <div class="h-full bg-card border border-border rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
                {post.data.image && (
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-3">
                    <span class={`px-2 py-1 text-xs font-medium rounded-full ${categoryColors[post.data.category]}`}>
                      {post.data.category}
                    </span>
                  </div>
                  <h2 class="text-xl font-bold mb-2 line-clamp-2 group-hover:text-primary transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-muted-foreground text-sm mb-4 line-clamp-2">
                    {post.data.excerpt}
                  </p>
                  <div class="flex flex-col gap-2 text-sm text-muted-foreground">
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span>{formatDate(post.data.date)}</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <span>{authors[post.data.author]?.name || post.data.author}</span>
                    </div>
                    {post.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-1 mt-2">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="px-2 py-0.5 text-xs bg-secondary rounded-md">
                            {tag}
                          </span>
                        ))}
                        {post.data.tags.length > 3 && (
                          <span class="px-2 py-0.5 text-xs text-muted-foreground">
                            +{post.data.tags.length - 3}
                          </span>
                        )}
                      </div>
                    )}
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-muted-foreground mb-4">No blog posts yet. Check back soon!</p>
          <a
            href="/"
            class="inline-flex items-center justify-center rounded-lg text-sm font-medium h-10 px-4 bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
          >
            Return Home
          </a>
        </div>
      )}

      <!-- Empty State for Filters -->
      <div id="empty-state" class="text-center py-12 hidden">
        <p class="text-muted-foreground mb-4">No posts found matching your filter.</p>
        <button
          type="button"
          id="clear-filter"
          class="inline-flex items-center justify-center rounded-lg text-sm font-medium h-10 px-4 border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
        >
          Clear Filter
        </button>
      </div>
    </div>
  </div>

  <FooterAstro slot="footer" />
</Layout>

<script>
  // Client-side category filtering
  const categoryButtons = document.querySelectorAll('[data-category]');
  const posts = document.querySelectorAll('[data-post-category]');
  const postsGrid = document.getElementById('posts-grid');
  const emptyState = document.getElementById('empty-state');
  const clearFilterBtn = document.getElementById('clear-filter');

  let activeCategory = 'all';

  function filterPosts(category: string) {
    activeCategory = category;
    let visibleCount = 0;

    // Update button states
    categoryButtons.forEach(btn => {
      const btnCategory = btn.getAttribute('data-category');
      if (btnCategory === category) {
        btn.classList.remove('bg-secondary', 'hover:bg-secondary/80');
        btn.classList.add('bg-primary', 'text-primary-foreground');
      } else {
        btn.classList.remove('bg-primary', 'text-primary-foreground');
        btn.classList.add('bg-secondary', 'hover:bg-secondary/80');
      }
    });

    // Filter posts
    posts.forEach(post => {
      const postCategory = post.getAttribute('data-post-category');
      if (category === 'all' || postCategory === category) {
        (post as HTMLElement).style.display = '';
        visibleCount++;
      } else {
        (post as HTMLElement).style.display = 'none';
      }
    });

    // Show/hide empty state
    if (visibleCount === 0 && postsGrid && emptyState) {
      postsGrid.classList.add('hidden');
      emptyState.classList.remove('hidden');
    } else if (postsGrid && emptyState) {
      postsGrid.classList.remove('hidden');
      emptyState.classList.add('hidden');
    }
  }

  categoryButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category') || 'all';
      filterPosts(category);
    });
  });

  clearFilterBtn?.addEventListener('click', () => {
    filterPosts('all');
  });
</script>
