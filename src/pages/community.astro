---
import Layout from '../layouts/Layout.astro';
import NavbarAstro from '../components/NavbarAstro.astro';
import FooterAstro from '../components/FooterAstro.astro';

interface QuickLink {
  title: string;
  description: string;
  iconPath: string;
  href: string;
  color: string;
}

const quickLinks: QuickLink[] = [
  {
    title: "GitHub Discussions",
    description: "Ask questions, share ideas, and connect with the community",
    iconPath: "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
    href: "https://github.com/getlumos/lumos/discussions",
    color: "bg-purple-500/10 text-purple-400 border-purple-500/30",
  },
  {
    title: "Report Issues",
    description: "Found a bug? Help us improve by reporting it",
    iconPath: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z",
    href: "https://github.com/getlumos/lumos/issues/new?template=bug_report.md",
    color: "bg-red-500/10 text-red-400 border-red-500/30",
  },
  {
    title: "Feature Requests",
    description: "Have an idea? We'd love to hear your suggestions",
    iconPath: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
    href: "https://github.com/getlumos/lumos/issues/new?template=feature_request.md",
    color: "bg-yellow-500/10 text-yellow-400 border-yellow-500/30",
  },
  {
    title: "Star on GitHub",
    description: "Show your support by starring the repository",
    iconPath: "M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z",
    href: "https://github.com/getlumos/lumos",
    color: "bg-green-500/10 text-green-400 border-green-500/30",
  },
];

interface ContributionArea {
  title: string;
  description: string;
  iconPath: string;
  tasks: string[];
}

const contributionAreas: ContributionArea[] = [
  {
    title: "Core Compiler",
    description: "Work on the LUMOS compiler and code generators",
    iconPath: "M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
    tasks: ["Parser improvements", "New language features", "Generator optimizations", "Performance tuning"],
  },
  {
    title: "Editor Extensions",
    description: "Improve developer experience across IDEs",
    iconPath: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
    tasks: ["VSCode features", "IntelliJ plugin", "Neovim support", "Emacs mode"],
  },
  {
    title: "Documentation",
    description: "Help others learn and use LUMOS effectively",
    iconPath: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
    tasks: ["Tutorials", "API docs", "Examples", "Translations"],
  },
  {
    title: "Ecosystem",
    description: "Build tools and integrations for the community",
    iconPath: "M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z",
    tasks: ["GitHub Actions", "CI/CD integrations", "Framework plugins", "Templates"],
  },
];

interface EcosystemRepo {
  name: string;
  description: string;
  href: string;
  language: string;
}

const ecosystemRepos: EcosystemRepo[] = [
  { name: "lumos", description: "Core compiler, CLI, and LSP server", href: "https://github.com/getlumos/lumos", language: "Rust" },
  { name: "vscode-lumos", description: "VSCode extension with full LSP support", href: "https://github.com/getlumos/vscode-lumos", language: "TypeScript" },
  { name: "intellij-lumos", description: "IntelliJ IDEA and Rust Rover plugin", href: "https://github.com/getlumos/intellij-lumos", language: "Kotlin" },
  { name: "nvim-lumos", description: "Neovim plugin with Tree-sitter", href: "https://github.com/getlumos/nvim-lumos", language: "Lua" },
  { name: "lumos-mode", description: "Emacs major mode with LSP", href: "https://github.com/getlumos/lumos-mode", language: "Emacs Lisp" },
  { name: "sublime-lumos", description: "Sublime Text package", href: "https://github.com/getlumos/sublime-lumos", language: "YAML" },
  { name: "awesome-lumos", description: "Production-ready examples", href: "https://github.com/getlumos/awesome-lumos", language: "Anchor" },
  { name: "docs-lumos", description: "Official documentation site", href: "https://github.com/getlumos/docs-lumos", language: "VitePress" },
  { name: "lumos-action", description: "GitHub Action for CI/CD", href: "https://github.com/getlumos/lumos-action", language: "Bash" },
];

const languageColors: Record<string, string> = {
  Rust: "bg-orange-500",
  TypeScript: "bg-blue-500",
  Kotlin: "bg-purple-500",
  Lua: "bg-indigo-500",
  "Emacs Lisp": "bg-pink-500",
  YAML: "bg-green-500",
  Anchor: "bg-cyan-500",
  VitePress: "bg-emerald-500",
  Bash: "bg-gray-500",
};
---

<Layout
  title="Community - LUMOS"
  description="Join the LUMOS open source community. Contribute to the project, report issues, share ideas, and connect with other developers building on Solana."
>
  <NavbarAstro slot="navbar" />

  <div class="pt-16">
    <!-- Hero Section -->
    <section class="pt-16 pb-16 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto max-w-4xl text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-secondary/50 backdrop-blur-sm border border-border mb-6">
          <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <span class="text-sm text-muted-foreground">Open Source Community</span>
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          Join the <span class="bg-gradient-to-r from-purple-500 to-purple-400 bg-clip-text text-transparent">LUMOS</span> Community
        </h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          LUMOS is built by developers, for developers. Whether you're a user, contributor,
          or just curious, there's a place for you here.
        </p>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto max-w-5xl">
        <h2 class="text-2xl font-bold mb-8 text-center">Get Involved</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
          {quickLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group p-6 bg-secondary/30 rounded-xl border border-border hover:border-primary/50 transition-all"
            >
              <div class={`inline-flex p-3 rounded-lg ${link.color} border mb-4`}>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={link.iconPath} />
                </svg>
              </div>
              <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors">
                {link.title}
              </h3>
              <p class="text-sm text-muted-foreground">{link.description}</p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contributing -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 bg-secondary/20">
      <div class="container mx-auto max-w-5xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Ways to Contribute</h2>
          <p class="text-muted-foreground max-w-2xl mx-auto">
            Every contribution matters, from fixing typos to implementing new features.
            Find an area that interests you and dive in!
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {contributionAreas.map((area) => (
            <div class="p-6 bg-background rounded-xl border border-border">
              <div class="flex items-center gap-3 mb-4">
                <div class="p-2 rounded-lg bg-primary/10 text-primary">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={area.iconPath} />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold">{area.title}</h3>
                  <p class="text-sm text-muted-foreground">{area.description}</p>
                </div>
              </div>
              <div class="flex flex-wrap gap-2">
                {area.tasks.map((task) => (
                  <span class="px-2 py-1 text-xs bg-secondary rounded-md text-muted-foreground">
                    {task}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>

        <div class="mt-8 text-center">
          <a
            href="https://github.com/getlumos/lumos/blob/main/CONTRIBUTING.md"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center rounded-lg text-lg font-semibold h-14 px-8 border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            Read Contributing Guide
          </a>
        </div>
      </div>
    </section>

    <!-- Ecosystem Repos -->
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto max-w-5xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Ecosystem Repositories</h2>
          <p class="text-muted-foreground max-w-2xl mx-auto">
            LUMOS is more than just a compiler. Explore our ecosystem of tools,
            extensions, and resources.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {ecosystemRepos.map((repo) => (
            <a
              href={repo.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group p-4 bg-secondary/30 rounded-lg border border-border hover:border-primary/50 transition-all"
            >
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-muted-foreground" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span class="font-mono text-sm font-medium group-hover:text-primary transition-colors">
                    {repo.name}
                  </span>
                </div>
                <svg class="w-3 h-3 text-muted-foreground opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </div>
              <p class="text-xs text-muted-foreground mb-3">{repo.description}</p>
              <div class="flex items-center gap-2">
                <span class={`w-2 h-2 rounded-full ${languageColors[repo.language]}`}></span>
                <span class="text-xs text-muted-foreground">{repo.language}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- First Contribution -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 bg-secondary/20">
      <div class="container mx-auto max-w-4xl">
        <div class="bg-gradient-to-r from-primary/10 to-accent/10 rounded-2xl border border-primary/20 p-8 md:p-12">
          <div class="text-center">
            <h2 class="text-3xl font-bold mb-4">Ready to Make Your First Contribution?</h2>
            <p class="text-muted-foreground mb-8 max-w-xl mx-auto">
              Look for issues labeled "good first issue" - they're perfect for newcomers
              and we'll help you every step of the way.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="https://github.com/getlumos/lumos/issues?q=is%3Aissue+is%3Aopen+label%3A%22good+first+issue%22"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center rounded-lg text-lg font-semibold h-14 px-8 bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Good First Issues
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
              <a
                href="https://github.com/getlumos/lumos/discussions/categories/q-a"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center rounded-lg text-lg font-semibold h-14 px-8 border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
              >
                Ask a Question
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- License -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto max-w-4xl text-center">
        <p class="text-sm text-muted-foreground">
          LUMOS is dual-licensed under{" "}
          <a href="https://opensource.org/licenses/MIT" class="text-primary hover:underline" target="_blank" rel="noopener noreferrer">
            MIT
          </a>{" "}
          and{" "}
          <a href="https://opensource.org/licenses/Apache-2.0" class="text-primary hover:underline" target="_blank" rel="noopener noreferrer">
            Apache 2.0
          </a>{" "}
          licenses. Use it freely in your projects.
        </p>
      </div>
    </section>
  </div>

  <FooterAstro slot="footer" />
</Layout>
