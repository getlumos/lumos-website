---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  author?: string;
}

const {
  title,
  description = "LUMOS is a type-safe schema language for Solana development. Write data structures once in .lumos syntax, generate production-ready Rust + TypeScript with guaranteed Borsh serialization compatibility.",
  image = "/og-image.png",
  type = "website",
  publishedTime,
  author
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title === "LUMOS" ? title : `${title} | LUMOS`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="LUMOS Contributors" />
    <meta name="keywords" content="LUMOS, Solana, schema language, TypeScript, Rust, code generation, type safety, Borsh serialization, Anchor framework, blockchain development" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- OpenGraph Metadata -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="LUMOS" />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {author && <meta property="article:author" content={author} />}

    <!-- Twitter Card Metadata -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@getlumos" />
    <meta name="twitter:creator" content="@getlumos" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Schema.org -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": type === "article" ? "BlogPosting" : "SoftwareApplication",
      "name": "LUMOS",
      "description": description,
      "url": canonicalURL.toString(),
      ...(type === "article" ? {
        "headline": title,
        "datePublished": publishedTime,
        "author": { "@type": "Person", "name": author }
      } : {
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": "Cross-platform",
        "softwareVersion": "0.3.0",
        "downloadUrl": "https://crates.io/crates/lumos-cli"
      })
    })} />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body class="min-h-screen bg-background text-foreground flex flex-col">
    <slot name="navbar">
      <!-- Default navbar will be inserted here -->
    </slot>
    <main class="flex-1">
      <slot />
    </main>
    <slot name="footer">
      <!-- Default footer will be inserted here -->
    </slot>
  </body>
</html>

<style is:global>
